@page
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Two-Factor Authentication";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    <div>
        <h4>Two-Factor Authentication</h4>
        <p>
            @if (Model.Is2faEnabled)
            {
                <span>Two-factor authentication is currently enabled.</span>
                <button type="submit" name="disable2fa" value="true" class="btn btn-danger">Disable</button>
            }
            else
            {
                <span>Two-factor authentication is currently disabled.</span>
                <button type="submit" name="enable2fa" value="true" class="btn btn-primary">Enable</button>
            }
        </p>
    </div>
</form>
