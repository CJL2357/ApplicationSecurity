@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center">
    <h1 class="text-danger">Oops!</h1>
    <h2 class="text-danger">Something went wrong.</h2>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <p>We're sorry for the inconvenience. Please try again later or return to the <a href="/">home page</a>.</p>

    <h3>Development Mode</h3>
    <p>
        If you're a developer, you can enable the <strong>Development</strong> environment to see detailed error information.
    </p>
    <p>
        <strong>Note:</strong> The Development environment shouldn't be enabled in production as it can expose sensitive information.
    </p>
</div>