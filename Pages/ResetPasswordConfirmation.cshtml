@page
@model WebApplication1.Pages.ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset Password Confirmation";
}

<h2>Reset Password Confirmation</h2>

<div class="alert alert-info">
    <p>An email has been sent to your email address with instructions on how to reset your password.</p>
    <p>If you do not receive the email, please check your spam folder or try again.</p>
</div>

<a asp-page="/Login">Return to Login</a>